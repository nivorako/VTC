{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
        "composite": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "types": ["vitest/globals", "@testing-library/jest-dom"],
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx",
        "src/tests/**/*"
    ]
}
