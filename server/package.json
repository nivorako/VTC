{
    "name": "vtc-payment-server",
    "version": "1.0.0",
    "type": "module",
    "description": "Serveur de paiement pour l'application VTC",
    "main": "dist/server.js",
    "scripts": {
        "prestart": "npm run build",
        "start": "node dist/server.js",
        "dev": "tsc-watch --onSuccess \"node dist/server.js\"",
        "debug": "ts-node server.ts",
        "build": "tsc",
        "clean": "rimraf dist",
        "rebuild": "npm run clean && npm run build",
        "postbuild": "test -f .env && cp .env dist/ || echo No .env file found"
    },
    "dependencies": {
        "@types/nodemailer": "^6.4.17",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "mongoose": "^8.16.0",
        "nodemailer": "^7.0.5",
        "stripe": "^14.3.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.23",
        "@types/node": "^24.0.3",
        "nodemon": "^3.0.1",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "tsc-watch": "^6.2.0",
        "typescript": "^5.8.3"
    }
}
